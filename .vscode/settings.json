{
  "tslint.autoFixOnSave": true,
  "tslint.enable": true,
  "emmet.showExpandedAbbreviation": "never",
  "editor.tabSize": 2,
  "html.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "build": true,
    "dist": true,
    "v2": true,
    "v2_pre": true,
    "node_modules": true,
    "/node_modules": true,
    "/node_modules/": true,
  },
  "search.exclude": {
    "/node_modules": true
  },
  "files.useExperimentalFileWatcher": true,
  "typescript.tsdk": "node_modules/typescript/lib"
}